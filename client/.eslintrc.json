{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier/react",
    "plugin:jest/recommended",
    "plugin:cypress/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "jest/valid-expect": 0,
    "import/no-named-as-default": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100
      }
    ]
  },
  "plugins": [
    "prettier",
    "jest",
    "cypress"
  ],
  "env": {
    "jest/globals": true,
    "browser": true,
    "node": true,
    "cypress/globals": true
  },
  "settings": {
    "import/core-modules": [ "lodash" ]

  },
  "globals": { "cy": true }
}
